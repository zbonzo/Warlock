{
  "name": "warlock-game",
  "private": true,
  "sideEffects": [
    "**/*.css",
    "**/*.scss",
    "**/*.less",
    "**/polyfills.js",
    "**/setupTests.js"
  ],
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm start --workspace=client",
    "build": "npm run build --workspace=client",
    "build:server": "npm run build --workspace=server",
    "start": "npm run start --workspace=server",
    "start:server": "npm run start --workspace=server",
    "start:client": "npm start --workspace=client",
    "test": "npm test --workspaces",
    "test:server": "npm run test --workspace=server",
    "test:client": "npm run test --workspace=client",
    "test:coverage": "npm run test:coverage --workspaces",
    "test:e2e": "node run-e2e-test.js",
    "test:e2e-abilities": "node e2e-ability-test.js",
    "install:all": "npm ci",
    "typecheck": "npx tsc --build",
    "typecheck:server": "cd server && npx tsc --noEmit",
    "typecheck:client": "cd client && npx tsc --noEmit",
    "typecheck:watch": "npx tsc --build --watch",
    "typecheck:clean": "npx tsc --build --clean",
    "typecheck:force": "npx tsc --build --force",
    "build:types": "npx tsc --build",
    "build:types:clean": "npx tsc --build --clean",
    "build:types:watch": "npx tsc --build --watch",
    "dev:types": "npx tsc --build --watch --preserveWatchOutput",
    "analyze:types": "node scripts/type-coverage-analysis.js",
    "analyze:bundle": "npm run build:client -- --analyze",
    "optimize:check": "npm run analyze:types && npm run analyze:bundle",
    "dev:ts": "concurrently \"npm:dev:ts:server\" \"npm:dev:ts:client\"",
    "dev:ts:server": "PORT=4001 npm run dev:ts --workspace=server",
    "dev:ts:client": "PORT=4000 npm run dev:ts --workspace=client",
    "build:ts": "npm run build:ts --workspace=server && npm run build:ts --workspace=client",
    "build:ts:server": "npm run build:ts --workspace=server",
    "build:ts:client": "npm run build:ts --workspace=client",
    "start:ts": "npm run start:ts --workspace=server",
    "start:ts:server": "PORT=4001 npm run start:ts --workspace=server"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/uuid": "^10.0.0",
    "babel-jest": "^29.7.0",
    "chai": "^4.3.0",
    "concurrently": "^8.2.0",
    "jest": "^29.7.0",
    "socket.io-client": "^4.0.0",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "type-coverage": "^2.29.7",
    "typescript-coverage-report": "^1.1.1"
  }
}
