# Debug Configuration for Warlock Game
# Copy this file to .env to enable debug logging

# Master debug toggle
DEBUG=true

# Debug feature flags - set to true/false to enable/disable specific debug categories
DEBUG_GAME_START=false
DEBUG_COMBAT=true
DEBUG_ROUND_RESULTS=true
DEBUG_SOCKET_EVENTS=false
DEBUG_PLAYER_ACTIONS=true
DEBUG_STATUS_EFFECTS=false
DEBUG_ABILITY_EXECUTION=true
DEBUG_PHASE_TRANSITIONS=true
DEBUG_VALIDATION=false
DEBUG_EVENT_BUS=false

# Debug logging levels
DEBUG_LEVEL_VERBOSE=false
DEBUG_LEVEL_INFO=true
DEBUG_LEVEL_WARN=true
DEBUG_LEVEL_ERROR=true

# Other environment variables
NODE_ENV=development